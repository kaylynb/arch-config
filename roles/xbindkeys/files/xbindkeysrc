"amixer set Master playback 5%+ && (killall -q -USR1 i3status || true)"
  XF86AudioRaiseVolume

"amixer set Master playback 5%- && (killall -q -USR1 i3status || true)"
  XF86AudioLowerVolume

"amixer set Master toggle && (killall -q -USR1 i3status || true)"
  XF86AudioMute

"(command -v light && light -U 5) || true"
  XF86MonBrightnessDown

"(command -v light && light -A 5) || true"
  XF86MonBrightnessUp

"kbdlight up"
  XF86KbdBrightnessUp

"kbdlight down"
  XF86KbdBrightnessDown

"togglecapsctrl && (killall -q -USR1 i3status || true)"
  Shift + Shift_R

"togglecapsctrl && (killall -q -USR1 i3status || true)"
  Shift + Shift_L
