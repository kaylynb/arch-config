"amixer set Master playback 5%+ && (killall -q -USR1 i3status || true)"
  XF86AudioRaiseVolume

"amixer set Master playback 5%- && (killall -q -USR1 i3status || true)"
  XF86AudioLowerVolume

"amixer set Master toggle && (killall -q -USR1 i3status || true)"
  XF86AudioMute

"light -s sysfs/backlight/acpi_video0 -A 5"
  XF86MonBrightnessUp

"light -s sysfs/backlight/acpi_video0 -U 5"
  XF86MonBrightnessDown

"light -s sysfs/leds/smc::kbd_backlight -A 5"
  XF86KbdBrightnessUp

"light -s sysfs/leds/smc::kbd_backlight -U 5"
  XF86KbdBrightnessDown
